<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/english_admin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_folder_open_24"
            android:padding="10dp" />


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/graphics_admin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/baseline_folder_open_24" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Англійська мова"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="110dp"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="283dp"
        android:layout_marginTop="110dp"
        android:text="Графіка"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="270dp"
        android:text="ООП"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="430dp"
        android:text="Теорія ймовірностей"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Менеджмент"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="270dp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="430dp"
        android:text="Сучасні мови"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="590dp"
        android:text="Технологія програмування"
        android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="160dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/management_admin"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_folder_open_24"
            android:padding="10dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/OOP_admin"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_folder_open_24"
            android:padding="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="320dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/modern_languages_admin"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_folder_open_24"
            android:padding="10dp" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/probability_theory_admin"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_folder_open_24"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="480dp">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/programming_technology_admin"
            android:layout_marginRight="197dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_folder_open_24"
            android:padding="10dp" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="685dp"
        android:shape="oval"
        android:layout_centerHorizontal="true"
        android:id="@+id/select_file_btn"
        android:text="OK"
        android:gravity="center"
        android:background="@drawable/oval"
        android:textColorHint="#3F5DFF"
        android:textStyle="bold">
    </ImageButton>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="700dp"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="+" >
    </TextView>






</RelativeLayout>